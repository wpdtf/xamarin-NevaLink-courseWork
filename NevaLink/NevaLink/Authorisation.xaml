<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="NevaLink.Authorisation">
    <ContentPage.Content>
        <StackLayout Orientation="Vertical" Padding="5" VerticalOptions="Center" HorizontalOptions="Center">
            <Image Source="logo.png" WidthRequest="210" Margin="5" />
            <Label Text="ошибки" x:Name="labelErr" FontSize="15" IsVisible="False" VerticalTextAlignment="Center" HorizontalTextAlignment="Center" />
            <Entry x:Name="login" Margin="2" Text="" Placeholder="Логин" WidthRequest="150" />
            <Entry x:Name="password" Margin="2" Text="" Placeholder="Пароль" WidthRequest="150" IsPassword="True" />
            <Button x:Name="BtnAuth" Margin="2" Clicked="btnAuth"  Text="Войти" WidthRequest="130" HeightRequest="50" CornerRadius="10" />
            <Button x:Name="BtnRegist" Margin="3" Clicked="btnRegistrat" Text="Регистрация" WidthRequest="130" HeightRequest="50" CornerRadius="10" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>